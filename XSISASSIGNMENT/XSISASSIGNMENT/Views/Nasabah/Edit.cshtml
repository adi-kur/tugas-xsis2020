@{
    ViewBag.Title = "Edit";
    Layout = null;
}


@using (Html.BeginForm("Edit", "Nasabah", FormMethod.Post, new { @id = "Id_Form_Edit" }))
{
    <div class="container">
        <div class="row">
            <input type="hidden" name="ID_NASABAH" id="ID_NASABAH" value="@Model.ID_NASABAH" />
            <div class="col-sm-6 form-group">
                <label for="NO_REKENING">NO REKENING</label>
                <input type="text" class="form-control" name="NO_REKENING" id="NO_REKENING" value="@Model.NO_REKENING" readonly />
            </div>

            <div class="col-sm-3 form-group">
                <label for="NIK">NIK</label>
                <input type="text" class="form-control" name="NIK" id="NIK" value="@Model.NIK" />
            </div>

            <div class="col-sm-3 form-group">
                <label for="TELEPON">TELEPON</label>
                <input type="text" class="form-control" name="TELEPON" id="TELEPON" value="@Model.TELEPON" />
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <label for="NAMA">NAMA</label>
                <input type="text" class="form-control" name="NAMA" id="NAMA" value="@Model.NAMA" />
            </div>

            <div class="col-sm-3 form-group">
                <label for="EMAIL">EMAIL</label>
                <input type="text" class="form-control" name="EMAIL" id="EMAIL" value="@Model.EMAIL" />
            </div>

            <div class="col-lg-3 form-group">
                <label for="SALDO">SALDO</label>
                <input type="text" class="form-control" name="SALDO" id="SALDO" value="@Model.SALDO" />
            </div>

        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm-6 form-group">
                <label for="TANGGAL_LAHIR">TANGGAL LAHIR</label>
                <input type="date" class="form-control" name="TANGGAL_LAHIR" id="TANGGAL_LAHIR" value="@Model.TANGGAL_LAHIR.ToString("yyyy-MM-dd")" />
            </div>

            <div class="col-sm-3 form-group">
                <label for="JENIS_KELAMIN">JENIS KELAMIN</label>
                <select class="form-control" id="JENIS_KELAMIN" name="JENIS_KELAMIN">
                    @{
                        if (Model.JENIS_KELAMIN == "P")
                        {
                            <option value="P" selected>Perempuan</option>
                            <option value="L">Laki-Laki</option>
                        }
                        else
                        {
                            <option value="P">Perempuan</option>
                            <option value="L" selected>Laki-Laki</option>
                        }
                    }

                </select>
            </div>

            <div class="col-sm-3 form-group">
                <label for="AGAMA">AGAMA</label>
                <select class="form-control" id="AGAMA" name="AGAMA">
                    @{
                        if (Model.AGAMA == "1")
                        {

                            <option value="1" selected>Islam</option>
                            <option value="2">Katolik</option>
                            <option value="3">Kristen</option>
                            <option value="4">Budha</option>
                            <option value="5">Hindu</option>

                        }
                        else if (Model.AGAMA == "2")
                        {
                            <option value="1">Islam</option>
                            <option value="2" selected>Katolik</option>
                            <option value="3">Kristen</option>
                            <option value="4">Budha</option>
                            <option value="5">Hindu</option>
                        }
                        else if (Model.AGAMA == "3")
                        {
                            <option value="1">Islam</option>
                            <option value="2" >Katolik</option>
                            <option value="3" selected>Kristen</option>
                            <option value="4">Budha</option>
                            <option value="5">Hindu</option>
                        }
                        else if (Model.AGAMA == "4")
                        {
                            <option value="1">Islam</option>
                            <option value="2" >Katolik</option>
                            <option value="3">Kristen</option>
                            <option value="4" selected>Budha</option>
                            <option value="5">Hindu</option>
                        }
                        else
                        {
                            <option value="1">Islam</option>
                            <option value="2" >Katolik</option>
                            <option value="3">Kristen</option>
                            <option value="4">Budha</option>
                            <option value="5" selected>Hindu</option>
                        }
                    }
                </select>
            </div>
        </div>
    </div>


    <div class="container">
        <div class="row">
            <div class="col-sm-6 form-group">
                <label for="NAMA_IBU_KANDUNG">NAMA IBU KANDUNG</label>
                <input type="text" class="form-control" name="NAMA_IBU_KANDUNG" id="NAMA_IBU_KANDUNG" value="@Model.NAMA_IBU_KANDUNG" />
            </div>

            <div class="col-sm-3 form-group">
                <label for="STATUS">STATUS</label>
                <select class="form-control" id="STATUS" name="STATUS">
                    @{
                        if (Model.STATUS == "1")
                        {
                            <option value="1" selected>Single</option>
                            <option value="2">Menikah</option>
                        }
                        else
                        {
                            <option value="1">Single</option>
                            <option value="2" selected>Menikah</option>
                        }
                    }

                </select>
               
            </div>

            <div class="col-sm-3 form-group">
                <label for="PEKERJAAN">PEKERJAAN</label>
                <input type="text" class="form-control" name="PEKERJAAN" id="PEKERJAAN" value="@Model.PEKERJAAN" />
            </div>

        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm-12 form-group">
                <label for="ALAMAT">ALAMAT</label>
                <input type="text" class="form-control" name="ALAMAT" id="ALAMAT" value="@Model.ALAMAT" />
            </div>
        </div>
    </div>


    <div class="modal-footer">
        <div class="form-group" style="float:right;">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button id="btn_submit" type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
}
<script src="~/Scripts/jquery.validate.js"></script>
<script>

    $(function () {
        $(function () {
            $("#Id_Form_Edit").validate({
                errorClass: 'errors',
                rules: {
                    EMAIL: {
                        required: true,
                    },
                    NAMA: {
                        required: true,
                    },
                    TELEPON: {
                        required: true,
                        Number: true
                    },
                    TANGGAL_LAHIR: {
                        required: true,
                    },
                    NIK: {
                        required: true,
                        maxlength: 16,
                        Number: true
                    }
                },
                messages: {
                    EMAIL: {
                        required: "Please input EMAIL",
                    },
                    TANGGAL_LAHIR: {
                        required: "Please input Tanggal Lahir"
                    },
                    NAMA: {
                        required: "Please input NAME",
                    },
                    TELEPON: {
                        required: "Please input TELEPON",
                        Number: "Must Be Number"
                    },
                    NIK: {
                        required: "Please Input NIK",
                        Number: "Must Be Number"
                    }
                },

            submitHandler: function (form) {
                var dataForm = $(form).serialize();
                debugger;
                $.ajax({
                    url: '/Nasabah/Edit',
                    data: dataForm,
                    method: 'post',
                    dataType: 'json',
                    success: function (response) {
                        if (response.message == "Berhasil") {
                            alert(response.message)
                            window.location.reload()
                        }
                        else {
                            alert(response.message);
                        }
                    }
                });
            }
        });
    });
</script>
